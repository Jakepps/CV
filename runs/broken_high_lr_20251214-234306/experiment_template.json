{
  "data": {
    "normalize": true,
    "shuffle_buffer": 10000
  },
  "model": {
    "initializer": "glorot_uniform"
  },
  "lr": {
    "strategy": "fixed",
    "lr": 0.001,
    "step_drop": 0.5,
    "step_epochs": 3,
    "base_lr": 0.0001,
    "max_lr": 0.005,
    "step_size": 2000
  },
  "train": {
    "seed": 42,
    "epochs": 6,
    "batch_size": 128,
    "val_split": 0.1,
    "tb_histogram_freq": 1,
    "profile_batch": 0,
    "activation_every_n_epochs": 1,
    "grad_every_n_epochs": 1,
    "cm_every_n_epochs": 1,
    "examples_every_n_epochs": 1,
    "optimizer": "adam",
    "high_lr_broken": true,
    "terminate_on_nan": true,
    "use_reduce_on_plateau": true,
    "reduce_factor": 0.5,
    "reduce_patience": 2,
    "reduce_min_lr": 1e-06,
    "use_checkpoint": true,
    "checkpoint_monitor": "val_accuracy",
    "use_custom_early_stop": true,
    "early_stop_patience": 3,
    "early_stop_min_delta": 0.0001,
    "device_label": "auto"
  }
}